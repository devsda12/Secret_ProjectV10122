<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/newQuoteTextinputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:hint="@string/changeQuoteHint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/changeQuoteEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="140" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/quoteLengthCounterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="0/140"
        app:layout_constraintEnd_toEndOf="@+id/newQuoteTextinputLayout"
        app:layout_constraintTop_toBottomOf="@+id/newQuoteTextinputLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>