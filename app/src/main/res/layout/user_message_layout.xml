<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/userMessageTriangle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/user_message_triangle" />

        <ImageView
            android:id="@+id/userMessageBox"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/user_message_box" />

        <TextView
            android:id="@+id/userMessageUsernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="userMessageUsernameTV"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/userMessageBox"
            app:layout_constraintTop_toTopOf="@+id/userMessageBox" />

        <TextView
            android:id="@+id/userMessageUserMessageTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="userMessageUserMessageTV"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/userMessageBox"
            app:layout_constraintEnd_toEndOf="@+id/userMessageBox"
            app:layout_constraintStart_toStartOf="@+id/userMessageBox"
            app:layout_constraintTop_toBottomOf="@+id/userMessageUsernameTV" />

        <TextView
            android:id="@+id/userMessageUserDatetimeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="Datetime"
            android:textColor="@color/colorWhite"
            app:layout_constraintEnd_toEndOf="@+id/userMessageBox"
            app:layout_constraintTop_toTopOf="@+id/userMessageBox" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>